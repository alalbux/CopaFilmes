{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "standard"
  ],
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "rules": {
    "no-invalid-this": 0,
    "babel/no-invalid-this": 1
  },
  "overrides": [
    {
      "files": "*.spec.js",
      "globals": {
        "describe": true,
        "beforeEach": true,
        "it": true
      },
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}